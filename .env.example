# ErrorWise Backend Configuration
# ===============================

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/errorwise_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=errorwise_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# AI Service API Keys (Get from respective providers)
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Tier-Based AI Configuration
# Free Tier:  Gemini Flash → OpenAI GPT-3.5 → Mock
# Pro Tier:   OpenAI GPT-3.5 → Gemini Flash → Claude Haiku → Mock  
# Team Tier:  Claude Sonnet → OpenAI GPT-4 → Gemini Pro → Mock
DEFAULT_SUBSCRIPTION_TIER=free

# Email Configuration (Mailtrap for development)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
FROM_EMAIL=noreply@errorwise.com

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Development Features
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true