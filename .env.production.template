# Production Environment Configuration
# Copy this to .env.production and update with your production values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Railway/Heroku provides these automatically, or use your cloud database URLs
DATABASE_URL=postgresql://username:password@hostname:5432/errorwise_production
REDIS_URL=redis://default:password@hostname:6379

# =============================================================================
# APPLICATION SETTINGS  
# =============================================================================
NODE_ENV=production
PORT=3000

# Your production domain
FRONTEND_URL=https://your-domain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate strong secrets: https://www.uuidgenerator.net/
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHARACTER_SECRET_STRING_NOW_PLEASE
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_64_CHARACTER_SECRET_STRING

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-production-openai-api-key-here

# Get from: https://makersuite.google.com/app/apikey  
GEMINI_API_KEY=your-production-gemini-api-key-here

# AI Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1500

# =============================================================================
# PAYMENT PROCESSING (DODO PAYMENTS)
# =============================================================================
# Get from: https://dashboard.dodopayments.com/
DODO_API_KEY=your-production-dodo-api-key-here
DODO_API_URL=https://api.dodopayments.com/v1
DODO_WEBHOOK_SECRET=your-production-webhook-secret-here

# Plan IDs from Dodo dashboard
DODO_PRO_PLAN_ID=plan_pro_production_id
DODO_TEAM_PLAN_ID=plan_team_production_id

# =============================================================================
# EMAIL SERVICE (OPTIONAL)
# =============================================================================
# Get from: https://sendgrid.com/
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Your frontend domain for CORS
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# MONITORING & LOGGING (OPTIONAL)
# =============================================================================
# Log level for production
LOG_LEVEL=info

# Enable/disable detailed logging
ENABLE_REQUEST_LOGGING=false

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================

# For Railway deployment:
# RAILWAY_STATIC_URL=your-app.railway.app
# RAILWAY_PUBLIC_DOMAIN=your-domain.com

# For Heroku deployment:
# HEROKU_APP_NAME=your-app-name

# For Vercel/Netlify (if using serverless):
# SERVERLESS=true

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================
# Database backup settings (if self-hosting)
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features in production
ENABLE_REGISTRATION=true
ENABLE_TEAM_FEATURES=true
ENABLE_VIDEO_CHAT=true
ENABLE_ANALYTICS=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.production
# 2. Update all values marked with "CHANGE_THIS" or "your-"
# 3. Keep this file secure and never commit to version control
# 4. Use your platform's environment variable settings instead when possible
# 5. Test all connections before deploying